<section class="row">
  <div class = "column">
    <h2>Create New Quest</h2>

    <form class="new-quest-form">
      <div>
        <label for="quest-title">Title</label>
        <input type="text" id="quest-title" name="quest-title" />
      </div>
      <div>
        <label for="quest-body"></label>
        <textarea id="quest-body" name="quest-body"></textarea>
      </div>
      <button type="submit" class="btn">Create</button>
    </form>
  </div>
  <div class = "column">
    <h2>About Me</h2>
    {{> user-info}}
  </div>

</section>

{{#if quests.length}}
  <section>
    <h2>Quests</h2>
    <ul>
      {{#each quests}}
        <li>
          <h3>{{quest_title}}</h3>
          <p>{{quest_text}}</p>
        </li>
      {{/each}}
    </ul>
  </section>
{{else}}
  <p>No quests found.</p>
{{/if}}

<script src="/js/add-quest.js"></script>