<section class="row">

  <div class="column">


    <form class="new-quest-form">
      <h1>Create New Quest</h1>
      <div>
        <label for="quest-title">Title: </label>
        <input type="text" id="quest-title" name="quest-title" />
      </div>
      <div>
        <label for="quest-setting">Setting: </label>
        <input type="text" id="quest-setting" name="quest-setting" />
      </div>
      <div>
        <label for="quest-setting">Challenge: </label>
        <input type="text" id="quest-challenge" name="quest-challenge" />
      </div>
      <div class="description">
        <label for="quest-text">Description:</label>
        <div>
          <textarea id="quest-text" name="quest-text"></textarea>
        </div>
      </div>
      <button type="submit" class="btn">Create</button>
    </form>
  </div>

</section>


{{#if quests.length}}
<section>
  <h1>Quests</h1>
  <ul>
    {{#each quests as |quest|}}
    <card class="quest-card">
      <div class="card-inner">
        <div class="card-front">
          <h4><span style="color: white;">Quest Title:</span> {{quest.quest_title}}</h4>
          <h4><span style="color: white;">Quest Setting:</span> {{quest.quest_setting}}</h4>
          <h4><span style="color: white;">Quest Challenge:</span> {{quest.quest_challenge}}</h4>
          <h4 style="color:white; margin-top:2%;">Description: </h4>
          <p>{{quest.quest_text}}</p>
        </div>
        <div class="card-back">
          <h4 style="color:white;">Created by: </h4>
          <p>{{user.username}}</p>
          <h4 style="color:white;">Date Created On: </h4>
          <p>{{created_at}}</p>
        </div>
      </div>
    </card>
    {{/each}}
  </ul>

</section>

{{else}}
<p>No quests found.</p>
{{/if}}


<script src="/js/dashboard.js"></script>